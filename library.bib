issn = {1819754X},
journal = {Mires and Peat},
keywords = {LARCA,carbon,northern white-cedar,woody peat},
number = {1},
pages = {1--9},
title = {{Long-term peat accumulation in temperate forested peatlands (Thuja occidentalis swamps) in the Great Lakes region of North America}},
