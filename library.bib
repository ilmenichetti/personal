doi = {10.1016/j.foreco.2016.03.027},
file = {:C\:/Users/lormen/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Zetterberg et al. - 2016 - Long-term soil calcium depletion after conventional and whole-tree harvest.pdf:pdf},
issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Acidification,Calcium,Conventional harvesting,MAGIC,Soils,Whole-tree harvesting},
pages = {102--115},
publisher = {Elsevier B.V.},
title = {{Long-term soil calcium depletion after conventional and whole-tree harvest}},
