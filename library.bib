isbn = {1726-4170},
issn = {17264189},
journal = {Biogeosciences},
number = {5},
pages = {1679--1714},
title = {{Soils apart from equilibrium – consequences for soil carbon balance modelling}},
volume = {3},
year = {2006}
}
