issn = {17500680},
journal = {Carbon Balance and Management},
keywords = {Coarse woody detritus,Decomposition,Forest carbon balance,Forest disturbance consequences,Heterotrophic respiration,Tree mortality effects},
number = {1},
pages = {1--21},
publisher = {Springer International Publishing},
title = {{Release of coarse woody detritus-related carbon: A synthesis across forest biomes}},
