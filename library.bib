issn = {0028646X},
journal = {New Phytologist},
keywords = {Belowground cycling,Global change,Root production,Root turnover,Terrestrial biomes},
number = {1},
pages = {13--31},
title = {{Global patterns of root turnover for terrestrial ecosystems}},
volume = {147},
year = {2000}
}
