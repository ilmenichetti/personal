doi = {10.5194/bg-2017-121},
file = {:C\:/Users/lormen/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Buend{\'{i}}a et al. - 2017 - Evaluating the effect of nutrient redistribution by animals on the phosphorus cycle of lowland Amazonia.pdf:pdf},
issn = {1810-6285},
journal = {Biogeosciences Discussions},
number = {April},
pages = {1--23},
title = {{Evaluating the effect of nutrient redistribution by animals on the phosphorus cycle of lowland Amazonia}},
url = {http://www.biogeosciences-discuss.net/bg-2017-121/},
year = {2017}
}
