doi = {10.1016/j.foreco.2016.06.033},
file = {:C\:/Users/lormen/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Magn{\'{u}}sson et al. - 2016 - Tamm Review Sequestration of carbon from coarse woody debris in forest soils.pdf:pdf},
issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Carbon sequestration,Coarse woody debris,Forest management,Forests,Soil carbon stabilization},
pages = {1--15},
title = {{Tamm Review: Sequestration of carbon from coarse woody debris in forest soils}},
volume = {377},
year = {2016}
}
@article{Wu2014,
