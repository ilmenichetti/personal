file = {:C\:/Users/lormen/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Moyano, Manzoni, Chenu - 2013 - Responses of soil heterotrophic respiration to moisture availability An exploration of processes and mod.pdf:pdf},
isbn = {0038-0717},
issn = {00380717},
journal = {Soil Biology and Biochemistry},
keywords = {Birch effect,Decomposition,Diffusion,Heterotrophic respiration,Mechanistic models,Moisture,Organic matter,Pore space,Texture,Water},
pages = {72--85},
publisher = {Elsevier Ltd},
title = {{Responses of soil heterotrophic respiration to moisture availability: An exploration of processes and models}},
