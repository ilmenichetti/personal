file = {:C\:/Users/lormen/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Plante et al. - 2006 - Impact of Soil Texture on the Distribution of Soil Organic Matter in Physical and Chemical Fractions.pdf:pdf},
journal = {Soil Science Society of America Journal},
number = {1},
pages = {287},
title = {{Impact of Soil Texture on the Distribution of Soil Organic Matter in Physical and Chemical Fractions}},
volume = {70},
year = {2006}
}
@article{Wang2018a,
