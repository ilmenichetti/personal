journal = {Soil Biology and Biochemistry},
keywords = {Boosted regression tree model,Herbicide,Organic C,PH,Roundup{\textregistered}},
pages = {50--57},
publisher = {Elsevier Ltd},
title = {{Impact of glyphosate on soil microbial biomass and respiration: A meta-analysis}},
