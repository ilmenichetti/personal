file = {:C\:/Users/lormen/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Menichetti, K{\"{a}}tterer, Bolinder - 2020 - A Bayesian modeling framework for estimating equilibrium soil organic C sequestration in agrofor.pdf:pdf;:C\:/Users/lormen/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Menichetti, K{\"{a}}tterer, Bolinder - 2020 - A Bayesian modeling framework for estimating equilibrium soil organic C sequestration in agro(2).pdf:pdf},
issn = {01678809},
