journal = {Forest Ecology and Management},
keywords = {Carbon storage,Norway spruce conversion,PICUS,Sustainable forest management},
number = {1-2},
pages = {64--79},
title = {{Assessing trade-offs between carbon sequestration and timber production within a framework of multi-purpose forestry in Austria}},
volume = {248},
