journal = {Soil Biology and Biochemistry},
keywords = {Identifiability analysis,Parameter estimation,Radiocarbon,Soil carbon,Soil incubations},
pages = {197--203},
publisher = {Elsevier Ltd},
title = {{Model structure and parameter identification of soil organic matter models}},
